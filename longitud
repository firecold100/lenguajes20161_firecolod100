#lang plai

;ejercicio 1
(define (potencia m n)
  (cond
    [(zero? n) 1]
    [else (* m (potencia m (- n 1)))]))

;(test (potencia 2 0) 1)
;(test (potencia 8 7) 125)
;(test (potencia 2 3) 8)

;ejercicio 2


;comentario para separar
(define (milength a_list)
  (cond 
    [(empty? a_list) 0]
    [else (+ 1 (milength (cdr a_list)))]))

;(test (milength '()) 0)
;(test (milength '(2)) 2)
;(test (milength '(2 3 5 3 2 5)) 6)